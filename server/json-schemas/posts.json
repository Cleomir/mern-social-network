{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "posts.json",
  "definitions": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-f]{24}$"
    }
  },
  "properties": {
    "create": {
      "type": "object",
      "properties": {
        "avatar": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "minLength": 3
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "user": {
          "$ref": "#/definitions/id"
        }
      },
      "required": ["text", "user"]
    },
    "get": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        }
      },
      "required": ["id"]
    },
    "deleteComment": {
      "type": "object",
      "properties": {
        "postId": {
          "$ref": "#/definitions/id"
        },
        "commentId": {
          "$ref": "#/definitions/id"
        }
      },
      "required": ["postId", "commentId"]
    }
  }
}
