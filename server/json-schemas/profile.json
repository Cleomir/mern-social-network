{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com",
  "definitions": {
    "user": {
      "type": "string",
      "pattern": "^[0-9a-f]{24}$"
    },
    "experience": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "company": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "from": {
          "type": "string",
          "format": "date"
        },
        "to": {
          "type": "string",
          "format": "date"
        },
        "current": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["title", "company", "from", "current"]
    },
    "education": {
      "type": "object",
      "properties": {
        "school": {
          "type": "string"
        },
        "degree": {
          "type": "string"
        },
        "field_of_study": {
          "type": "string"
        },
        "from": {
          "type": "string",
          "format": "date"
        },
        "to": {
          "type": "string",
          "format": "date"
        },
        "current": {
          "type": "boolean"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["school", "degree", "field_of_study", "from", "current"]
    },
    "social": {
      "type": "object",
      "properties": {
        "youtube": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        },
        "facebook": {
          "type": "string"
        },
        "linkedin": {
          "type": "string"
        },
        "instagram": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "create": {
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/definitions/user"
        },
        "handle": {
          "type": "string",
          "maxLength": 40
        },
        "company": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string",
            "minItems": 1
          }
        },
        "bio": {
          "type": "string"
        },
        "github_username": {
          "type": "string"
        },
        "experience": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/experience"
          }
        },
        "education": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/education"
          }
        },
        "social": {
          "$ref": "#/definitions/social"
        }
      },
      "required": ["user", "handle", "status", "skills"]
    },
    "get": {
      "type": "object",
      "properties": {
        "user": {
          "$ref": "#/definitions/user"
        }
      }
    },
    "experiences": {
      "properties": {
        "user": {
          "$ref": "#/definitions/user"
        },
        "experiences": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/experience"
          }
        }
      }
    }
  }
}
