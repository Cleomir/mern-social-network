{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "users.json",
  "definitions": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 20
    }
  },
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "$ref": "#/definitions/email"
        },
        "password": {
          "$ref": "#/definitions/password"
        }
      },
      "required": ["name", "email", "password"]
    },
    "login": {
      "type": "object",
      "properties": {
        "email": { "$ref": "#/definitions/email" },
        "password": { "$ref": "#/definitions/password" }
      },
      "required": ["email", "password"]
    }
  }
}
